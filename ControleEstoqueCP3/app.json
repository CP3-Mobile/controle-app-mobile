{
  "expo": {
    "name": "ControleEstoqueCP3",
    "slug": "controle-estoque-cp3",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/splash-icon.png",
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "image": "./assets/splash-icon-dark.png",
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Precisamos acessar sua câmera para escanear códigos de barras.",
          "microphonePermission": "Precisamos acessar seu microfone (caso necessário para vídeo)."
        }
      ]
    ]
  }
}
